:80 {
    # Collapse submissions → voice-app
    handle /submit-collapse* {
        reverse_proxy voice-app:8080
    }

    # Collapse schema
    handle /schema/collapse* {
        reverse_proxy voice-app:8080
    }

    # Everything else → voice-app (serves index.html, static/js, etc.)
    handle {
        reverse_proxy voice-app:8080
    }
}
