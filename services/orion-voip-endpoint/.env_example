# Where to store bind-mounted data (on Athena)
VOIP_DATA_ROOT=/mnt/docker/orion-voip-endpoint

# Container name override (optional)
SERVICE_NAME=voip-endpoint

# LAN IP of Athena (for Cisco TFTP + SIP proxy)
VOIP_LAN_HOST_IP=192.168.1.66

# Tailscale IP of Athena (for Hub/Atlas/ProDesk to hit HTTP API)
VOIP_TAILSCALE_HOST_IP=100.92.216.81

# Cisco 8831 MAC
VOIP_PHONE_MAC=AC:44:F2:1C:7D:D5

# SIP credentials
VOIP_SIP_EXT=1001
VOIP_SIP_SECRET=catpoopiesforyou

# Auto-answer + codecs
VOIP_AUTOANSWER=true
VOIP_CODECS=ulaw,alaw,g722

# HTTP API port (inside container; host-networked so same externally)
VOIP_API_PORT=8085


########################
# Orion Bus / Redis
########################

ORION_BUS_ENABLED=true
ORION_BUS_ENFORCE_CATALOG=true
# Redis URL for the Orion Bus on Athena
# if you prefer host/port/db style, we can split it, but this works with redis-py/aioredis
#ORION_BUS_URL=

# Command channel that Hub/Cortex can publish to for this endpoint
# (e.g. {"action": "page_echo"} or {"action": "echo_call"})
VOIP_BUS_COMMAND_CHANNEL=orion:voip:command

# Status/telemetry channel this service can publish to
# (e.g. health pings, last call info)
VOIP_BUS_STATUS_CHANNEL=orion:voip:status
