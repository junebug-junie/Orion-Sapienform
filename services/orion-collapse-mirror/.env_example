# --- Service Identity ---
SERVICE_NAME=collapse-mirror
SERVICE_VERSION=0.3.0
PORT=8087

# --- Database ---
POSTGRES_URI=postgresql+psycopg2://postgres:postgres@${PROJECT}-sql-db:5432/conjourney

# --- Orion Bus ---
ORION_BUS_URL=redis://${PROJECT}-bus-core:6379/0
ORION_BUS_ENABLED=true

# --- Bus Channels (publish/listen) ---
CHANNEL_COLLAPSE_INTAKE=orion:collapse:intake
CHANNEL_COLLAPSE_TRIAGE=orion:collapse:triage

# optional: future feedback listeners (confirmations, errors)
CHANNEL_RDF_CONFIRM=orion:rdf:confirm
CHANNEL_RDF_ERROR=orion:rdf:error

# --- Environment Settings ---
CHRONICLE_ENVIRONMENT=dev
CHRONICLE_MODE=local
DEV_MODE=true
