# --- Service Identity & Port ---
SERVICE_NAME=biometrics
SERVICE_VERSION=1.0.0
PORT=8100

# --- Orion Bus Integration ---
# This single channel is used for both publishing and subscribing for self-persistence.
TELEMETRY_PUBLISH_CHANNEL=orion:telemetry:biometrics
BIOMETRICS_SAMPLE_CHANNEL=orion:biometrics:sample
BIOMETRICS_SUMMARY_CHANNEL=orion:biometrics:summary
BIOMETRICS_INDUCTION_CHANNEL=orion:biometrics:induction
BIOMETRICS_CLUSTER_CHANNEL=orion:biometrics:cluster
SPARK_SIGNAL_CHANNEL=orion:spark:signal
EXTERNAL_SUBSCRIBE_CHANNEL=

#ORION_BUS_URL=redis://${PROJECT}-bus-core:6379/0
ORION_BUS_ENFORCE_CATALOG=true


# --- Runtime Settings ---
TELEMETRY_INTERVAL=30 # seconds
LOG_LEVEL=INFO
BIOMETRICS_MODE=agent
CLUSTER_PUBLISH_INTERVAL=15
CLUSTER_ROLE_WEIGHTS={"atlas":0.7,"athena":0.3,"other":0.5}
SPARK_SIGNAL_TTL_MS=15000

THERMAL_MIN_C=50.0
THERMAL_MAX_C=85.0
DISK_BW_MBPS=200.0
NET_BW_MBPS=125.0
POWER_BAND_ALPHA=0.1
