# -----------------------------
# Orion Notify Digest Service
# -----------------------------
SERVICE_NAME=notify-digest
SERVICE_VERSION=0.1.0
NODE_NAME=athena

POSTGRES_URI=sqlite:////data/notify.db

NOTIFY_SERVICE_URL=http://orion-notify:7140
NOTIFY_API_TOKEN=

DIGEST_ENABLED=true
DIGEST_TIME_LOCAL=07:30
DIGEST_WINDOW_HOURS=24
DIGEST_RECIPIENT_GROUP=juniper_primary
DIGEST_RUN_ON_START=false

# Landing Pad topics (optional)
LANDING_PAD_URL=
TOPICS_WINDOW_MINUTES=
TOPICS_MAX_TOPICS=20
TOPICS_DRIFT_MIN_TURNS=10
TOPICS_DRIFT_MAX_SESSIONS=50

# Drift alerts
DRIFT_ALERTS_ENABLED=false
DRIFT_CHECK_INTERVAL_SECONDS=900
DRIFT_ALERT_THRESHOLD=0.5
DRIFT_ALERT_MAX_ITEMS=5
DRIFT_ALERT_SEVERITY=warning
DRIFT_ALERT_EVENT_KIND=orion.topics.drift
DRIFT_ALERT_DEDUPE_WINDOW_SECONDS=3600
