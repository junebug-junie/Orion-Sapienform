# Orion Chat Memory
SERVICE_NAME=orion-chat-memory
SERVICE_VERSION=0.1.0
NODE_NAME=athena
LOG_LEVEL=INFO

# Bus
ORION_BUS_URL=redis://100.92.216.81:6379/0
ORION_BUS_ENABLED=true
ORION_BUS_ENFORCE_CATALOG=false

# Inbound channels
CHAT_MEMORY_INPUT_CHANNELS=["orion:chat:history:log"]
CHAT_MEMORY_COLLECTION=orion_chat
CHAT_MEMORY_UPSERT_CHANNEL=orion:memory:vector:upsert
CHAT_MEMORY_CHUNK_INTERVAL=0

# Embedding
CHAT_MEMORY_EMBED_ENABLE=true
CHAT_MEMORY_EMBED_MODE=bus
CHAT_MEMORY_EMBED_REQUEST_CHANNEL=orion:embedding:generate
CHAT_MEMORY_EMBED_RESULT_CHANNEL=orion:embedding:result
CHAT_MEMORY_EMBED_HOST_URL=
CHAT_MEMORY_INCLUDE_LATENTS=false
CHAT_MEMORY_EMBED_TIMEOUT_MS=10000
CHAT_MEMORY_EMBED_PROFILE=default
