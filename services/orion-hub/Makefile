# ğŸ§ Orion Hub Makefile
# Voice + Web Gateway | Node-aware | Mesh-integrated
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

ROOT_ENV = /mnt/services/Orion-Sapienform/.env
NET      ?= app-net
MODE     ?= dev
LOG_TAIL ?= 200
PROJECT  ?= $(shell grep -E '^PROJECT=' $(ROOT_ENV) | cut -d= -f2)

SVC ?= hub-app

.PHONY: up down restart build status logs log shell env

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Lifecycle
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## ğŸŸ¢ Start Orion Hub (dev|prod)
up:
	@echo "â†’ Starting Orion Hub ($(PROJECT)) on $(NET) network..."
	@MODE=$(MODE) docker compose up -d --build
	@echo "âœ” Orion Hub ($(PROJECT)) started in $(MODE) mode"

## ğŸ”´ Stop and clean up
down:
	@docker compose down --remove-orphans

## â™»ï¸ Restart cleanly
restart: down up

## ğŸ§± Build images only
build:
	@docker compose build

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Monitoring
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## ğŸ“‹ Container status
status:
	@docker compose ps

## ğŸ§¾ Follow all logs
logs:
	@docker compose logs -f --tail=$(LOG_TAIL)

## ğŸ” Follow logs for a specific service: make log SVC=hub-app
log:
	@docker compose logs -f --tail=$(LOG_TAIL) $(SVC)

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Debugging
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## ğŸš Shell into main container
shell:
	@docker compose exec -it $(SVC) /bin/bash || docker compose exec -it $(SVC) /bin/sh

## ğŸŒ Show effective environment context
env:
	@echo "PROJECT=$(PROJECT)"
	@echo "MODE=$(MODE)"
	@echo "NET=$(NET)"
	@echo "LOG_TAIL=$(LOG_TAIL)"
	@echo "Loaded from $(ROOT_ENV) + .env"
