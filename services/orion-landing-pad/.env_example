# ======================
# orion-landing-pad
# ======================

# Identity
#PROJECT=orion
APP_NAME=landing-pad
SERVICE_VERSION=0.1.0
#NODE_NAME=athena
PORT=8370
LOG_LEVEL=INFO

# --- Orion Bus / Redis ---
#ORION_BUS_URL=redis://orion-redis:6379/0
#ORION_BUS_ENFORCE_CATALOG=true
ORION_BUS_ENABLED=true
REDIS_URL=${ORION_BUS_URL}

# --- Input Filters ---
PAD_INPUT_ALLOWLIST_PATTERNS=orion:telemetry:*,orion:cortex:*,orion:spark:*
PAD_INPUT_DENYLIST_PATTERNS=orion:pad:*

# --- Outputs ---
PAD_OUTPUT_EVENT_CHANNEL=orion:pad:event
PAD_OUTPUT_FRAME_CHANNEL=orion:pad:frame
PAD_OUTPUT_SIGNAL_CHANNEL=orion:pad:signal
PAD_OUTPUT_STATS_CHANNEL=orion:pad:stats

# --- RPC ---
PAD_RPC_REQUEST_CHANNEL=orion:pad:rpc:request

# --- Frame + Windowing ---
PAD_FRAME_TICK_MS=5000
PAD_FRAME_WINDOW_MS=15000
PAD_MAX_EVENTS_PER_TICK=50

# --- Scoring ---
PAD_MIN_SALIENCE=0.05
PAD_PULSE_SALIENCE=0.8

# --- Backpressure ---
PAD_MAX_QUEUE_SIZE=500
PAD_QUEUE_DROP_POLICY=drop_low_priority_first

# --- Retention ---
PAD_EVENT_TTL_SEC=600
PAD_FRAME_TTL_SEC=900
PAD_EVENTS_STREAM_KEY=orion:pad:events
PAD_FRAMES_STREAM_KEY=orion:pad:frames
PAD_STREAM_MAXLEN=500

# --- Observability ---
PAD_STATS_TICK_SEC=15
HEARTBEAT_INTERVAL_SEC=10
SHUTDOWN_GRACE_SEC=10
ERROR_CHANNEL=orion:system:error

# --- Tensorizer ---
PAD_TENSOR_DIM=32
ORION_HEALTH_CHANNEL=orion:system:health

# --- Web UI ---
PUBLIC_BASE_PATH=/landing-pad
UI_SAMPLE_LIMIT=500
UI_QUERY_LIMIT=2000
UI_DEFAULT_LOOKBACK_MINUTES=60
