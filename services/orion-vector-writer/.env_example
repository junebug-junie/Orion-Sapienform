SERVICE_NAME=vector-writer
SERVICE_VERSION=0.2.1
PORT=8010

ORION_BUS_ENABLED=true
ORION_BUS_ENFORCE_CATALOG=true
#ORION_BUS_URL=redis://orion-redis:6379/0

# --- Routing ---
VECTOR_WRITER_CHAT_HISTORY_CHANNEL=orion:chat:history:log
VECTOR_WRITER_CHAT_COLLECTION=orion_chat
VECTOR_WRITER_SUBSCRIBE_CHANNELS=["orion:collapse:triage", "orion:chat:history:log", "orion:rag:doc", "orion:cognition:trace", "orion:vector:write"]
VECTOR_WRITER_ROUTE_MAP_JSON={"collapse.triage": "CollapseTriageEvent", "chat.history.message.v1": "ChatHistoryMessageV1", "rag.document": "RAGDocumentEvent", "vector.write": "VectorWriteRequest"}

PUBLISH_CHANNEL_VECTOR_CONFIRM=orion:vector:confirm

# --- Vector Store ---
VECTOR_DB_HOST=${PROJECT}-vector-db
VECTOR_DB_PORT=8000
VECTOR_DB_COLLECTION=orion_main_store
VECTOR_DB_CREATE_IF_MISSING=true
EMBEDDING_MODEL=all-MiniLM-L6-v2
HOST_RAG_FILES_DIR=/mnt/storage-lukewarm/rag-files/test-txt

# Vector Writer Embeddings
VECTOR_WRITER_EMBEDDINGS_ENABLED=true
VECTOR_WRITER_REQUIRE_EMBEDDINGS=false
VECTOR_WRITER_EMBEDDING_CHANNEL=orion:embedding:generate
VECTOR_WRITER_EMBEDDING_REPLY_PREFIX=orion:embedding:result:
VECTOR_WRITER_EMBEDDING_PROFILE=default
VECTOR_WRITER_EMBEDDING_TIMEOUT_SEC=30

# --- Runtime ---
LOG_LEVEL=INFO
BATCH_SIZE=10
