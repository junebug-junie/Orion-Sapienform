# === Service Identity ===
SERVICE_NAME=gdb-client
SERVICE_VERSION=1.0.1
PORT=8000

# === Orion Bus / Redis ===
ORION_BUS_ENABLED=true
ORION_BUS_URL=redis://${PROJECT}-bus-core:6379/0
SUBSCRIBE_CHANNEL=orion:rdf-collapse:enqueue

CHANNEL_RDF_CONFIRM=orion:rdf:confirm
CHANNEL_RDF_ERROR=orion:rdf:error

# === GraphDB Configuration ===
GRAPHDB_VERSION=11.0.0
GRAPHDB_URL=http://${PROJECT}-graphdb:7200
GRAPHDB_REPO=collapse
GRAPHDB_HOME=/mnt/storage/collapse-mirrors
GRAPHDB_IMPORT=/mnt/storage/collapse-mirrors/import
GRAPHDB_PORT_HTTP=7200
GRAPHDB_PORT_HTTPS=7300
GDB_JAVA_OPTS=-Xmx8g -Dgraphdb.workbench.importDirectory=/var/graphdb/import

# === Runtime ===
LOG_LEVEL=INFO

# === Project Context ===
PROJECT=orion-janus
NET=app-net
