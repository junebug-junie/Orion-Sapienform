# --- Service Identity ---
SERVICE_NAME=rag
SERVICE_VERSION=1.0.0
PORT=8300

# --- Orion Bus Integration ---
ORION_BUS_ENABLED=true
#ORION_BUS_URL=redis://${PROJECT}-bus-core:6379/0

# --- Bus Channels ---
# This service listens for query requests on this channel.
SUBSCRIBE_CHANNEL_RAG_REQUEST=orion:rag:request

# It sends its context-augmented prompts to the brain on this channel.
PUBLISH_CHANNEL_BRAIN_INTAKE=orion:brain:intake

# --- Vector Store Configuration ---
# This now points to the standalone vector database service.
VECTOR_DB_URL=http://${PROJECT}-vector-db:8000
VECTOR_DB_COLLECTION=orion_main_store
VECTOR_DB_CREATE_IF_MISSING=true

# The embedding model is still needed for vectorizing queries.
EMBEDDING_MODEL=all-MiniLM-L6-v2

# --- Runtime Settings ---
STARTUP_DELAY=5
LOG_LEVEL=INFO
