# --- Orion Bus / Redis ---
#ORION_BUS_URL=redis://orion-redis:6379/0
ORION_BUS_ENABLED=true

SERVICE_NAME=spark-introspector
SERVICE_VERSION=0.1.0

# --- Spark introspection candidate channel ---
# Brain publishes "spiky" turns here
CHANNEL_SPARK_CANDIDATE=orion:spark:introspect:candidate
CHANNEL_CORTEX_REQUEST=orion-cortex:request

# --- SQL writer intake channel ---
# SQL writer listens here for table writes ... not currently published to this channel?
SQL_WRITER_CHANNEL=orion:sql:intake

# --- Cortex orchestrator HTTP endpoint ---
# This is the FastAPI /orchestrate exposed by orion-cortex-orch
CORTEX_ORCH_URL=http://orion-cortex-orch:8072/orchestrate

# --- HTTP timeouts for calling Cortex ---
CORTEX_TIMEOUT_SEC=15
CONNECT_TIMEOUT=5.0
READ_TIMEOUT=10.0
