# -----------------------------
# Orion Notify Service
# -----------------------------
SERVICE_NAME=notify
SERVICE_VERSION=0.1.0
NODE_NAME=athena
PORT=7140

# API token (optional; if set, clients must send X-Orion-Notify-Token)
API_TOKEN=

# Orion Bus (in-app delivery)
ORION_BUS_ENABLED=true
ORION_BUS_ENFORCE_CATALOG=true
ORION_BUS_URL=redis://100.92.216.81:6379/0

NOTIFY_IN_APP_ENABLED=true
NOTIFY_IN_APP_CHANNEL=orion:notify:in_app

SQL_WRITER_API_URL=http://orion-sql-writer:8220
POLICY_RULES_PATH=/app/app/policy/rules.yaml

# Email transport (SMTP)
NOTIFY_EMAIL_SMTP_HOST=smtp.yourprovider.com
NOTIFY_EMAIL_SMTP_PORT=587
NOTIFY_EMAIL_SMTP_USERNAME=YOUR_SMTP_USER
NOTIFY_EMAIL_SMTP_PASSWORD=YOUR_SMTP_PASS
NOTIFY_EMAIL_USE_TLS=true
NOTIFY_EMAIL_FROM="Orion Notify <orion-notify@yourdomain>"
NOTIFY_EMAIL_TO=you@youremail

# Attention escalation loop
NOTIFY_ESCALATION_POLL_SECONDS=60

# Presence + hub URL (for chat message escalation hints)
NOTIFY_PRESENCE_URL=http://172.18.0.1/api/presence
NOTIFY_PRESENCE_TIMEOUT_SECONDS=3
NOTIFY_HUB_URL=http://172.18.0.1:8080
