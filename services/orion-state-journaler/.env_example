# ──────────────────────────────────────────────────────────────
# Orion State Journaler
# ──────────────────────────────────────────────────────────────

# Compose naming / network
PROJECT=orion-athena
NET=app-net

# Service identity
SERVICE_NAME=state-journaler
SERVICE_VERSION=0.1.0
NODE_NAME=athena

# Port mapping (compose maps JOURNALER_PORT -> PORT)
JOURNALER_PORT=8380

# Orion bus
ORION_BUS_ENABLED=true
ORION_BUS_ENFORCE_CATALOG=false
ORION_BUS_URL=redis://100.92.216.81:6379/0

# Channels
CHANNEL_SPARK_STATE_SNAPSHOT=orion:spark:state:snapshot
CHANNEL_EQUILIBRIUM_SNAPSHOT=orion:equilibrium:snapshot

# Postgres
POSTGRES_URI=postgresql://postgres:postgres@orion-athena-sql-db:5432/conjourney

# Rollups
SPARK_ROLLUP_TABLE=spark_state_rollups
ROLLUP_WINDOWS_SEC=[60,300,3600]
ROLLUP_INTERVAL_SEC=30
ROLLUP_RETENTION_HOURS=24

# Chassis / runtime
HEARTBEAT_INTERVAL_SEC=10
