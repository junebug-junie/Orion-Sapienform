# Absolute path to your venv
export VIRTUAL_ENV="/mnt/scripts/Orion-Sapienform/orion_dev"

# Prepend venv bin to PATH (but avoid double-prepending)
case ":$PATH:" in
  *":$VIRTUAL_ENV/bin:"*) ;;
  *) export PATH="$VIRTUAL_ENV/bin:$PATH" ;;
esac

# Show venv name in the prompt (once)
if [ -z "${ORION_PS1_PATCHED:-}" ]; then
  export ORION_PS1_PATCHED=1
  export PS1="(orion_dev) ${PS1}"
fi
