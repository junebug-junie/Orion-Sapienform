janus@janus:/mnt/services/Orion-Sapienform/services/orion-rdf-writer$ cat .env
# RDF + GraphDB
GRAPHDB_URL=http://graphdb:7200
GRAPHDB_REPO=collapse
STATEMENTS_URL=http://graphdb:7200/repositories/collapse/statements

GRAPHDB_USER=user
GRAPHDB_PASS=pass

# === Core Bus (shared) ===
ORION_BUS_URL=redis://orion-redis:6379/0
ORION_BUS_CHANNEL=orion:events:tagged      # default shared event feed
ORION_CORE_EVENTS=orion:core:events         # health, heartbeats, and system-level notices

# === Bus Channels (domain outputs) ===
# these are channels that a service actively publishes TO
CHANNEL_EVENTS_TAGGED=orion:events:tagged          # tagged / enriched events
CHANNEL_RDF_ENQUEUE=orion:rdf-collapse:enqueue     # enqueue RDF triples for GraphDB write
CHANNEL_EVENTS_TRIAGE=orion:collapse:triage        # new triage ingress from collapse-mirror

# === Bus Listener Channels ===
# these are channels a service SUBSCRIBES to (listens for)
CHANNEL_RDF_CONFIRM=orion:rdf:confirm              # ack of successful RDF insert
CHANNEL_RDF_ERROR=orion:rdf:error                  # errors or failed RDF insertions

# Service configuration
SERVICE_NAME=orion-rdf-writer
LOG_LEVEL=DEBUG
BATCH_SIZE=1
RETRY_LIMIT=3
RETRY_INTERVAL=2
