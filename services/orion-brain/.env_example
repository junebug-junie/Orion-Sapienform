SERVICE_NAME=brain
SERVICE_VERSION=0.2.0
PORT=8088

# --- Cognitive Backends ---
BACKENDS=http://${PROJECT}-brain-llm:11434
SELECTION_POLICY=least_conn
HEALTH_INTERVAL_SEC=5
CONNECT_TIMEOUT_SEC=10
READ_TIMEOUT_SEC=600
REDIS_WAIT_ATTEMPTS=10
REDIS_WAIT_DELAY=2

# --- Orion Bus Integration ---
ORION_BUS_ENABLED=true
ORION_BUS_URL=redis://${PROJECT}-bus-core:6379/0

# --- Brain Event Streams ---
CHANNEL_BRAIN_INTAKE=orion:brain:intake
CHANNEL_BRAIN_OUT=orion:brain:out
CHANNEL_BRAIN_STATUS=orion:brain:status
CHANNEL_BRAIN_STREAM=orion:brain:stream

# --- Voice / Collapse hooks ---
CHANNEL_VOICE_TRANSCRIPT=orion:voice:transcript
CHANNEL_VOICE_LLM=orion:voice:llm
CHANNEL_VOICE_TTS=orion:voice:tts
CHANNEL_COLLAPSE_INTAKE=orion:collapse:intake

# --- Runtime / GPU ---
NVIDIA_VISIBLE_DEVICES=all
STARTUP_DELAY=5
