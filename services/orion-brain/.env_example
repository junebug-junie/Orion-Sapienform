# ðŸ§  Brain â€” Cognitive Core of the Orion Mesh
# Manages model inference, orchestration, and bus communication
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# --- Service Identity ---
SERVICE_NAME=brain
SERVICE_VERSION=0.1.0
PORT=8088

# --- Cognitive Backends ---
# Primary inference backend (Ollama)
BACKENDS=http://${PROJECT}-brain-llm:11434
SELECTION_POLICY=least_conn
HEALTH_INTERVAL_SEC=5
CONNECT_TIMEOUT_SEC=10
READ_TIMEOUT_SEC=600
REDIS_WAIT_ATTEMPTS=10
REDIS_WAIT_DELAY=2

# --- Orion Bus Integration ---
# Uses node-aware project prefix for distributed connectivity
ORION_BUS_ENABLED=true
REDIS_URL=redis://${PROJECT}-bus-core:6379/0

# --- Event Streams ---
# Inbound telemetry â†’ from Hub or Mirror
EVENTS_ENABLE=true
EVENTS_STREAM=orion:evt:gateway

# Outbound telemetry â†’ to Bus / downstream consumers
BUS_OUT_ENABLE=true
BUS_OUT_STREAM=orion:bus:out

# --- Runtime / GPU ---
NVIDIA_VISIBLE_DEVICES=all

# Delay (seconds) before brain starts to allow Redis DNS to resolve
STARTUP_DELAY=5
