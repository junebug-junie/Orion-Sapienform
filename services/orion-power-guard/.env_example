# Orion Power Guard
SERVICE_NAME=power-guard
SERVICE_VERSION=0.1.0

ORION_BUS_ENABLED=true
ORION_BUS_ENFORCE_CATALOG=true
ORION_BUS_URL=redis://localhost:6379/0

POWER_GUARD_NODE_NAME=$(hostname)
POWER_GUARD_UPS_NAME=apc_ups
POWER_GUARD_UPS_HOST=192.168.0.50
POWER_GUARD_SNMP_PORT=161
POWER_GUARD_SNMP_COMMUNITY=public

POWER_GUARD_POLL_INTERVAL_SEC=5.0
POWER_GUARD_ONBATTERY_GRACE_SEC=60.0

CHANNEL_POWER_EVENTS=orion:power:events

# Optional shutdown wiring
POWER_GUARD_ENABLE_SHUTDOWN=false
POWER_GUARD_SHUTDOWN_CMD=/sbin/shutdown -h +1 "Orion PowerGuard: UPS on battery"
