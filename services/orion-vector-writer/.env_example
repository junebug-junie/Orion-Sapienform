VECTOR_DB_PORT=8000
VECTOR_DB_COLLECTION=orion_context
VECTOR_DB_CREATE_IF_MISSING=true
EMBEDDING_MODEL=all-MiniLM-L6-v2

# --- Runtime ---
LOG_LEVEL=INFO
BATCH_SIZE=10
