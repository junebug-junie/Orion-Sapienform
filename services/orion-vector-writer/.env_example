SERVICE_NAME=orion-vector-writer
SERVICE_VERSION=0.2.1
PORT=8010

ORION_BUS_ENABLED=true
# ORION_BUS_URL=redis://${PROJECT}-bus-core:6379/0

# --- Routing ---
VECTOR_WRITER_SUBSCRIBE_CHANNELS=["orion:collapse:triage", "orion:chat:message", "orion:rag:doc"]
