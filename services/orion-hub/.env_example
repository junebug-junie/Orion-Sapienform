# --- Service Identity ---
SERVICE_NAME=hub
SERVICE_VERSION=0.3.0
HUB_PORT=8080

# --- Whisper Transcription Settings ---
WHISPER_MODEL_SIZE=distil-medium.en
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

# --- LLM Model Selection ---
LLM_MODEL=llama3.1:8b-instruct-q8_0
#mistral:instruct like talking with a child

# --- Cognitive Backends ---
BRAIN_URL=http://127.0.0.1:8088
ORION_BUS_ENABLED=true
ORION_BUS_URL=redis://100.92.216.81:6379/0

# --- Orion Voice Channels ---
CHANNEL_VOICE_TRANSCRIPT=orion:voice:transcript
CHANNEL_VOICE_LLM=orion:voice:llm
CHANNEL_VOICE_TTS=orion:voice:tts
CHANNEL_TTS_INTAKE=orion:tts:intake

# --- Collapse Event Channels Publish ---
CHANNEL_COLLAPSE_INTAKE=orion:collapse:intake
CHANNEL_COLLAPSE_TRIAGE=orion:collapse:triage

# --- Brain Channels ---
CHANNEL_BRAIN_INTAKE=orion:brain:intake
CHANNEL_BRAIN_OUT=orion:brain:out

# Which bus service name the gateway listens on
LLM_GATEWAY_SERVICE_NAME = "LLMGatewayService"

# Where Cortex + Hub send exec_step/chat/generate requests
EXEC_REQUEST_PREFIX = "orion-exec:request"

# LLM Gateway (Hub â†’ Gateway chat RPC)
CHANNEL_LLM_GATEWAY_INTAKE=orion:llm-gateway:chat:intake
CHANNEL_LLM_REPLY_PREFIX=orion:llm-gateway:chat:reply

# --- Agent Council integration ---
CHANNEL_COUNCIL_INTAKE=orion:agent-council:intake
CHANNEL_COUNCIL_REPLY_PREFIX=orion:agent-council:reply
CHANNEL_LLM_REPLY_PREFIX = "orion:llm:reply"

# --- Recall / RAG integration ---
CHANNEL_RECALL_REQUEST=orion:recall:request
CHANNEL_RECALL_DEFAULT_REPLY_PREFIX=orion:recall:reply
RECALL_DEFAULT_MAX_ITEMS=16
RECALL_DEFAULT_TIME_WINDOW_DAYS=30
RECALL_DEFAULT_MODE=hybrid

# --- Runtime / Mode ---
MODE=dev
